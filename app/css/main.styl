html
	height 100%
	padding 0
	margin 0

body
	background #000000
	width 100%
	height 100%
	margin 0
	padding 0
	#main
		position fixed
		width 100%
		height 100%
	#drop
		font-family monospace
		font-size 10px
		position fixed
		top 0
		left 0
		width 100%
		height 100%
		z-index 2
		opacity 0
		background #000000
		color #ffff00
		transition opacity 0.4s
		text-align center
		vertical-align middle
		line-height 100vh
		&.active
			opacity 0.8